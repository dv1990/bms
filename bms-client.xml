<?xml version="1.0" encoding="UTF-8"?>
<project name="bms-client" default="all">
  
  
  <property file="bms-client.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.ane"/>
    <include name="*.zip"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.ardulink-core-base-2.0.1.classpath">
    <pathelement location="${basedir}/bms/lib/ardulink-core-base-2.0.1.jar"/>
    <pathelement location="${basedir}/bms/lib/ardulink-core-beans-2.0.1.jar"/>
    <pathelement location="${basedir}/bms/lib/ardulink-core-proxy-2.0.1.jar"/>
    <pathelement location="${basedir}/bms/lib/ardulink-core-serial-rxtx-2.0.1.jar"/>
    <pathelement location="${basedir}/bms/lib/ardulink-core-util-2.0.1.jar"/>
  </path>
  
  <path id="library.ardulink-legacy-2.0.1.classpath"/>
  
  <path id="library.jcommon-1.0.23.classpath">
    <pathelement location="${basedir}/bms/lib/RXTXcomm.jar"/>
    <pathelement location="${basedir}/bms/lib/jcommon-1.0.23.jar"/>
    <pathelement location="${basedir}/bms/lib/jfreechart-1.0.19.jar"/>
    <pathelement location="${basedir}/bms/lib/json-20140107.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module bms -->
  
  <dirname property="module.bms.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.bms" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.bms" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.bms" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.bms" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="bms.output.dir" value="${module.bms.basedir}/out/production/bms"/>
  <property name="bms.testoutput.dir" value="${module.bms.basedir}/out/test/bms"/>
  
  <path id="bms.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="bms.module.production.classpath">
    <path refid="${module.jdk.classpath.bms}"/>
    <path refid="library.jcommon-1.0.23.classpath"/>
    <path refid="library.ardulink-core-base-2.0.1.classpath"/>
    <path refid="library.ardulink-legacy-2.0.1.classpath"/>
  </path>
  
  <path id="bms.runtime.production.module.classpath">
    <pathelement location="${bms.output.dir}"/>
    <path refid="library.jcommon-1.0.23.classpath"/>
    <path refid="library.ardulink-core-base-2.0.1.classpath"/>
    <path refid="library.ardulink-legacy-2.0.1.classpath"/>
  </path>
  
  <path id="bms.module.classpath">
    <path refid="${module.jdk.classpath.bms}"/>
    <pathelement location="${bms.output.dir}"/>
    <path refid="library.jcommon-1.0.23.classpath"/>
    <path refid="library.ardulink-core-base-2.0.1.classpath"/>
    <path refid="library.ardulink-legacy-2.0.1.classpath"/>
  </path>
  
  <path id="bms.runtime.module.classpath">
    <pathelement location="${bms.testoutput.dir}"/>
    <pathelement location="${bms.output.dir}"/>
    <path refid="library.jcommon-1.0.23.classpath"/>
    <path refid="library.ardulink-core-base-2.0.1.classpath"/>
    <path refid="library.ardulink-legacy-2.0.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.bms">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.bms">
    <patternset refid="excluded.from.module.bms"/>
  </patternset>
  
  <path id="bms.module.sourcepath">
    <dirset dir="${module.bms.basedir}/bms">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.bms" depends="compile.module.bms.production,compile.module.bms.tests" description="Compile module bms"/>
  
  <target name="compile.module.bms.production" depends="register.custom.compilers" description="Compile module bms; production classes">
    <mkdir dir="${bms.output.dir}"/>
    <javac2 destdir="${bms.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.bms}/javac">
      <compilerarg line="${compiler.args.bms}"/>
      <bootclasspath refid="bms.module.bootclasspath"/>
      <classpath refid="bms.module.production.classpath"/>
      <src refid="bms.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.bms"/>
    </javac2>
    
    <copy todir="${bms.output.dir}">
      <fileset dir="${module.bms.basedir}/bms/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.bms.tests" depends="register.custom.compilers,compile.module.bms.production" description="compile module bms; test classes" unless="skip.tests"/>
  
  <target name="clean.module.bms" description="cleanup module">
    <delete dir="${bms.output.dir}"/>
    <delete dir="${bms.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.bms" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.bms" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.bms:jar" value="${basedir}/out/artifacts/bms_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.bms.jar" value="${artifacts.temp.dir}/bms.jar"/>
  </target>
  
  <target name="artifact.bms:jar" depends="init.artifacts, compile.module.bms" description="Build &#39;bms:jar&#39; artifact">
    <property name="artifact.temp.output.bms:jar" value="${artifacts.temp.dir}/bms_jar"/>
    <mkdir dir="${artifact.temp.output.bms:jar}"/>
    <jar destfile="${temp.jar.path.bms.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${bms.output.dir}"/>
      <zipfileset src="${basedir}/bms/lib/jcommon-1.0.23.jar"/>
      <zipfileset src="${basedir}/bms/lib/jfreechart-1.0.19.jar"/>
      <zipfileset src="${basedir}/bms/lib/json-20140107.jar"/>
      <zipfileset src="${basedir}/bms/lib/RXTXcomm.jar"/>
    </jar>
    <copy file="${temp.jar.path.bms.jar}" tofile="${artifact.temp.output.bms:jar}/bms.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.bms:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.bms:jar}"/>
    <copy todir="${artifact.output.bms:jar}">
      <fileset dir="${artifact.temp.output.bms:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>